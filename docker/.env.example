# Docker Image Configuration
DOCKER_IMAGE=pyrobud
DOCKER_TAG=latest

# Data Directory Mappings
# Config files and session files (.toml, .session, .session-journal)
CONFIG_DIR=./data/cfg
# Database directories (.db/)
DB_DIR=./data/db
# Custom modules directory
CUSTOM_MODULES_DIR=./data/custom_modules

# Configuration
# Config file name (within cfg directory)
CONFIG_FILE=config.toml

# Timezone
TZ=UTC

# Compose Project Name (optional)
COMPOSE_PROJECT_NAME=pyrobud
